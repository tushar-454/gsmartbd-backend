{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "indent": 0,
    "linebreak-style": 0,
    "no-unused-vars": "warn",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "warn",
    "class-methods-use-this": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "comma-dangle": "off"
  },
  "plugins": ["prettier"]
}
